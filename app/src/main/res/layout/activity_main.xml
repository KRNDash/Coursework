<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3ED"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bold"
        android:text="Запоминай-ка"
        android:textColor="#000000"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="Цвет рубашки"
        android:textColor="#393939"
        android:textSize="24sp"
        android:fontFamily="@font/regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button15"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#376451"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button14"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button14"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#6D2A2A"
        app:layout_constraintEnd_toStartOf="@+id/button15"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button13"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#374164"
        app:layout_constraintEnd_toStartOf="@+id/button14"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        app:backgroundTint="#ABABAB"
        app:layout_constraintEnd_toStartOf="@+id/button13"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="25dp"
        android:text="Режим игры"
        android:textColor="#393939"
        android:textSize="24sp"
        android:fontFamily="@font/regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp"
        android:text="Оформление"
        android:textColor="#393939"
        android:textSize="24sp"
        android:fontFamily="@font/regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/easy"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:checked="true"
            android:text="Лёгкий"
            android:textSize="20dp"
            android:fontFamily="@font/light"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/medium"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Средний"
            android:textSize="20dp"
            android:fontFamily="@font/light"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/hard"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Сложный"
            android:textSize="20dp"
            android:fontFamily="@font/light"
            android:theme="@style/MyRadioButton" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:animateLayoutChanges="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButton4"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:checked="true"
            android:text="Цвета"
            android:textSize="20dp"
            android:fontFamily="@font/light"
            android:theme="@style/MyRadioButton" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButton5"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/radioButton4"
            android:text="Цифры"
            android:textSize="20dp"
            android:fontFamily="@font/light"
            android:theme="@style/MyRadioButton" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:animateLayoutChanges="false"
        app:layout_constraintStart_toEndOf="@+id/rg1"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButton6"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/radioButton4"
            android:text="Буквы"
            android:textSize="20dp"
            android:fontFamily="@font/light"
            android:theme="@style/MyRadioButton" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButton7"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/radioButton5"
            android:layout_toRightOf="@+id/radioButton6"
            android:text="Картинки"
            android:textSize="20dp"
            android:fontFamily="@font/light"
            android:theme="@style/MyRadioButton" />

    </RadioGroup>

    <Button
        android:id="@+id/start"
        android:layout_width="332dp"
        android:layout_height="66dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/bold"
        android:text="Начать игру"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20dp"
        app:backgroundTint="#FFD439"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>